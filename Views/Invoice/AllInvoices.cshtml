@model List<HansenProject3.Models.Invoice>
@{
    ViewBag.Title = "All Invoices";
}

<h1 id="AllHeader">All Invoices</h1>

<div class="row">
    <div class="col-md-3">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-7">
        <input type="button" class="btn btn-primary" value="Search" onclick="Sortable.Search()">
        <a class="btn btn-primary" href="/Invoice/Upsert/0">Add New</a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0)">Invoice ID</th>
            <th onclick="Sortable.Sort(1)">Customer ID</th>
            <th onclick="Sortable.Sort(2)">Invoice Date</th>
            <th onclick="Sortable.Sort(3)">Product Total</th>
            <th onclick="Sortable.Sort(4)">Sales Tax</th>
            <th onclick="Sortable.Sort(5)">Shipping</th>
            <th onclick="Sortable.Sort(6)">Invoice Total</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
        <tr>
            <td>@invoice.InvoiceID</td>
            <td>@invoice.CustomerID</td>
            <td>@invoice.InvoiceDate</td>
            <td>@invoice.ProductTotal</td>
            <td>@invoice.SalesTax</td>
            <td>@invoice.Shipping</td>
            <td>@invoice.InvoiceTotal</td>
            <td>
                <a class="btn btn-success" href="/Invoice/Upsert/@invoice.InvoiceID">Update</a>
                <a class="btn btn-danger" href="/Invoice/Delete/@invoice.InvoiceID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<script>
    window.onload = function () {
        Sortable.baseUrl = '/Invoice/AllInvoices/';
    }
</script>