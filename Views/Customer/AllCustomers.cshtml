@model List<HansenProject3.Models.Customer>
@{
    ViewBag.Title = "AllCustomers";
}

<h1 id="AllHeader">All Customers</h1>

<div class="row">
    <div class="col-md-3">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-7">
        <input type="button" class="btn btn-info" value="Search" onclick="Sortable.Search()">
        <a class="btn btn-info" href="/Customer/Upsert/0">Add New</a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0)">Id</th>
            <th onclick="Sortable.Sort(1)">Name</th>
            <th onclick="Sortable.Sort(2)">Address</th>
            <th onclick="Sortable.Sort(3)">City</th>
            <th onclick="Sortable.Sort(4)">State</th>
            <th onclick="Sortable.Sort(5)">Zip Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.Name</td>
            <td>@customer.Address</td>
            <td>@customer.City</td>
            <td>@customer.State</td>
            <td>@customer.ZipCode</td>
            <td><a href="/Customer/Upsert/@customer.CustomerID">Update</a></td>
        </tr>
        }
    </tbody>
</table>

<script>
    window.onload = function () {
        Sortable.baseUrl = '/Customer/AllCustomers/';
    }
</script>