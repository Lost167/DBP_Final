@model List<HansenProject3.Models.OrderOption>
@{
    ViewBag.Title = "All Order Options";
}

<h1 id="AllHeader">All Order Option</h1>

<div class="row">
    <div class="col-md-3">
        <input id="txtSearch" type="text" class="form-control" placeholder="Search..." />
    </div>
    <div class="col-md-7">
        <input type="button" class="btn btn-primary" value="Search" onclick="Sortable.Search()">
        <a class="btn btn-primary" href="/OrderOption/Upsert/0">Add New</a>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th onclick="Sortable.Sort(0)">Sales Tax Rate</th>
            <th onclick="Sortable.Sort(1)">First Book Ship Charge</th>
            <th onclick="Sortable.Sort(2)">Additional Book Charge</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderOption in Model)
        {
            <tr>
                <td>@orderOption.SalesTaxRate</td>
                <td>@orderOption.FirstBookShipCharge</td>
                <td>@orderOption.AdditionalBookShipCharge</td>
                <td>
                    <a class="btn btn-success" href="/Customer/Upsert/@orderOption.SalesTaxRate">Update</a>
                    <a class="btn btn-danger" href="/Customer/Delete/@orderOption.SalesTaxRate">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    window.onload = function () {
        Sortable.baseUrl = '/OrderOption/AllOrderOptions/';
    }
</script>